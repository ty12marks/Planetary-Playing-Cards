---
layout: main-layout.njk
---

<div class="planet-card">
  <div class="planet-avatar-container">
    <div class="planet-avatar" style="background: linear-gradient(to bottom, #ff6600, #ff9900);"></div>
  </div>
  <div class="card-content">
    <h2>{{ planetName }}</h2>
    <p class="au-label">Astronomical Unit:</p>
    <p class="au-value">{{ astronomicalUnit }}</p>
  </div>
</div>
